{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["**/*.json", "**/*.hbs", "**/*.txt"],
    "plugins": []
  },
  "watchMode": {
    "watchAssets": true,
    "ignore": [
      "**/*.spec.ts",
      "**/*.e2e-spec.ts",
      "**/node_modules/**",
      "**/dist/**",
      "**/uploads/**",
      "**/temp/**",
      "**/tmp/**",
      "**/.git/**",
      "**/.env*"
    ]
  }
}
